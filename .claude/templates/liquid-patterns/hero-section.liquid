{% comment %}
  Hero Banner Section
  Full-width hero with image, heading, text, and CTA button
{% endcomment %}

<section class="hero{% if section.settings.height %} hero--{{ section.settings.height }}{% endif %}">
  <div class="hero__background">
    {% if section.settings.image %}
      <img
        class="hero__image"
        src="{{ section.settings.image | img_url: '1920x' }}"
        alt="{{ section.settings.image.alt | escape }}"
        loading="eager"
      >
    {% else %}
      <div class="hero__placeholder" style="background-color: {{ section.settings.background_color | default: '#f5f5f5' }};">
      </div>
    {% endif %}
  </div>

  <div class="hero__content hero__content--{{ section.settings.text_alignment }}">
    <div class="container">
      {% if section.settings.heading %}
        <h1 class="hero__heading" style="color: {{ section.settings.heading_color }};">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      {% if section.settings.subheading %}
        <p class="hero__subheading" style="color: {{ section.settings.text_color }};">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      {% if section.settings.button_text %}
        <a
          href="{{ section.settings.button_link }}"
          class="button button--{{ section.settings.button_style }}"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero--small {
    min-height: 400px;
  }

  .hero--medium {
    min-height: 550px;
  }

  .hero--large {
    min-height: 700px;
  }

  @media (max-width: 768px) {
    .hero--small { min-height: 300px; }
    .hero--medium { min-height: 400px; }
    .hero--large { min-height: 500px; }
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero__image,
  .hero__placeholder {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: 3rem 0;
  }

  .hero__content--left {
    text-align: left;
  }

  .hero__content--center {
    text-align: center;
  }

  .hero__content--right {
    text-align: right;
  }

  .hero__heading {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 700;
    margin: 0 0 1rem;
    line-height: 1.2;
  }

  .hero__subheading {
    font-size: clamp(1rem, 2vw, 1.5rem);
    margin: 0 0 2rem;
    max-width: 600px;
  }

  .hero__content--left .hero__subheading {
    margin-left: 0;
    margin-right: auto;
  }

  .hero__content--center .hero__subheading {
    margin-left: auto;
    margin-right: auto;
  }

  .hero__content--right .hero__subheading {
    margin-left: auto;
    margin-right: 0;
  }

  .button {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .button--primary {
    background: var(--color-primary, #000);
    color: var(--color-primary-text, #fff);
  }

  .button--primary:hover {
    background: var(--color-primary-hover, #333);
  }

  .button--secondary {
    background: transparent;
    color: var(--color-text, #000);
    border: 2px solid currentColor;
  }

  .button--secondary:hover {
    background: var(--color-text, #000);
    color: var(--color-background, #fff);
  }
{% endstylesheet %}

{% schema %}
